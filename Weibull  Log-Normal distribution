import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import norm, weibull_min, lognorm

# Parameters for Weibull distribution
shape = 1.5  # Shape parameter
scale = 1.0  # Scale parameter
x_weibull = np.linspace(0, 3, 100)  # Range of x
y_weibull = weibull_min.pdf(x_weibull, shape, scale=scale)  # Probability density of Weibull distribution

# Parameters for Normal distribution
mu = 0      # Mean
sigma = 1   # Standard deviation
x_normal = np.linspace(-3, 3, 100)  # Range of x
y_normal = norm.pdf(x_normal, mu, sigma)  # Probability density of Normal distribution

# Parameters for Log-Normal distribution
sigma_lognorm = 0.954  # Standard deviation
mu_lognorm = 0         # Mean
x_lognorm = np.linspace(0, 3, 100)  # Range of x
y_lognorm = lognorm.pdf(x_lognorm, sigma_lognorm, scale=np.exp(mu_lognorm))  # Probability density of Log-Normal distribution

# Plotting
plt.figure(figsize=(12, 8))

# Plot for Weibull distribution
plt.subplot(3, 1, 1)
plt.plot(x_weibull, y_weibull, label='Weibull Distribution', color='blue')
plt.title('Weibull Distribution')  # Title
plt.xlabel('x')  # x-axis label
plt.ylabel('Probability Density')  # y-axis label
plt.legend()

# Plot for Normal distribution
plt.subplot(3, 1, 2)
plt.plot(x_normal, y_normal, label='Normal Distribution', color='green')
plt.title('Normal Distribution')  # Title
plt.xlabel('x')  # x-axis label
plt.ylabel('Probability Density')  # y-axis label
plt.legend()

# Plot for Log-Normal distribution
plt.subplot(3, 1, 3)
plt.plot(x_lognorm, y_lognorm, label='Log-Normal Distribution', color='red')
plt.title('Log-Normal Distribution')  # Title
plt.xlabel('x')  # x-axis label
plt.ylabel('Probability Density')  # y-axis label
plt.legend()

plt.tight_layout()  # Adjust layout
plt.show()  # Show the plot
